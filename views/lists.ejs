<!DOCTYPE HTML>
<html lang="en">
<head>
    <%- include("./parts/head.ejs") %>
</head>
<body>
    <%- include("./parts/modal.ejs") %>
    <%- include("./parts/header.ejs") %>
    <%- include("./parts/back.ejs") %>
    <section>
        <article>
            <% if (DATA.authorization === '1') { %>
                <% if (DATA.language === 'none') { %>
                    <%- include("./parts/nolang.ejs") %>
                <% } else { %>
                    <h4><%= DATA.langPack.title %></h4>

                    <%- include("./parts/add.ejs") %>
                <% } %>
            <% } else { %>
                <p><%= DATA.langPack.notauthorized %></p>
            <% } %>
        </article>
    </section>
    <%- include("./parts/footer.ejs") %>
    <%- include("./parts/script.ejs") %>
    <% if (DATA.authorization === '1') { %>
        <% if (DATA.language !== 'none') { %>
            <script>
                const data = { field_names: JSON.parse('<%- DATA.form %>') };
                if (service.$('#add_form').length > 0) {
                    service.$('#add_form')[0].addEventListener("click", function(){
                        lists.add('lists', 'add', data);
                    }, false);
                }
            </script>
        <% } %>
    <% } %>
</body>