<header>
    <div class="wrap">
        <div class="logo">
            <span><a href="/">rW</a></span>
            <p><a href="/">repeatWords</a></p>
        </div>
        <div class="user">
            <% if (DATA.authorization === '1') { %>
                <p><%= DATA.name %> <%= DATA.surname %></p>
                <div class="foto">
                    <img src="<%= DATA.foto %>" alt="ava">
                    <div class="settings">
                        <div><i class="fas fa-envelope" aria-hidden="true"></i></div>
                        <div class="drop_menu" onclick="loadStatic.showMenu()"><i class="fas fa-cogs" aria-hidden="true"></i></div>
                    </div>
                </div>
            <% } %>
            <% if (DATA.authorization === '0') { %>
                <div class="social">
                    <a href="/google"><img src="img/google.png" alt="google"></a>
                    <a href="/linkedin"><img src="img/linkedin.png" alt="linkedin"></a>
                    <a href="/facebook"><img src="img/facebook.png" alt="facebook"></a>
                </div>
            <% } %>
        </div>
        <div class="menu">
            <ul>
                <li><a href="/profile"><%= DATA.langPack.profile %></a></li>
                <li><a href="/settings"><%= DATA.langPack.settings %></a></li>
                <li><a href="/friends"><%= DATA.langPack.friends %></a></li>
                <li><a href="/exit"><%= DATA.langPack.exit %></a></li>
            </ul>
        </div>
    </div>
</header>